<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CliDisableLatitudepayPaymentMethodActionGroup">
        <annotations>
            <description>Disable Latitudepay payment method by CLI command config:set</description>
        </annotations>

        <magentoCLI command="config:set {{DisableLatitudepayPaymentMethod.path}} {{DisableLatitudepayPaymentMethod.value}}" stepKey="disableLatitudepayPaymentMethod"/>
    </actionGroup>
</actionGroups>