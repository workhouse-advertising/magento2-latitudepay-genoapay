<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
<system>
    <section id="payment">
        <group id="latitude_section" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>LatitudePay/GenoaPay</label>

            <group id="latitude" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="lattitude-payment-logo"></div><div class="lattitude-payment-byline">Use LatitudePay to spread the cost of your purchases over 10 weeks.</div>]]></label>
                <fieldset_css>complex lattitude-payment-section</fieldset_css>
                <frontend_model>Latitude\Payment\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <field id="enabled" translate="label" type="select" showInDefault="1" showInWebsite="1" sortOrder="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <config_path>payment/latitudepay/enabled</config_path>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                    <config_path>payment/latitudepay/sort_order</config_path>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="show_in_mobile" translate="label" type="select" showInDefault="1" showInWebsite="1" sortOrder="2"
                       showInStore="1">
                    <label>Show Payment Icon in Mobile</label>
                    <config_path>payment/latitudepay/show_in_mobile</config_path>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Environment</label>
                    <source_model>Latitude\Payment\Model\Adminhtml\Source\Environment</source_model>
                    <config_path>payment/latitudepay/environment</config_path>
                </field>
                <field id="client_key" translate="label" type="obscure" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/latitudepay/client_key</config_path>
                </field>
                <field id="client_secret" translate="label" type="obscure" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client Secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/latitudepay/client_secret</config_path>
                </field>
                <field id="success_url" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Success URL</label>
                    <config_path>payment/latitudepay/success_url</config_path>
                </field>
                <field id="fail_url" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Fail URL</label>
                    <config_path>payment/latitudepay/fail_url</config_path>
                </field>
                <field id="callback_url" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Callback URL</label>
                    <config_path>payment/latitudepay/callback_url</config_path>
                </field>
                <field id="logging" translate="label" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Logging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Toggle logging to latitude_payment.log</comment>
                    <config_path>payment/latitudepay/logging</config_path>
                </field>
                <!--<field id="currency" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Currency Code</label>
                    <source_model>Magento\Config\Model\Config\Source\Locale\Currency</source_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Currency\DefaultCurrency</backend_model>
                    <config_path>payment/latitudepay/currency</config_path>
                </field>-->
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="10" showInDefault="9"
                       showInWebsite="1" showInStore="0">
                    <label>Payment From Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                    <config_path>payment/latitudepay/allowspecific</config_path>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="11" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Payment From Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <config_path>payment/latitudepay/specificcountry</config_path>
                </field>
                <field id="installment_no" translate="label" type="text" sortOrder="12" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>No. of Installments</label>
                    <config_path>payment/latitudepay/installment_no</config_path>
                </field>
                <field id="static_block_pdp" translate="label" type="select"  sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Static block identifier for PDP</label>
                    <source_model>Latitude\Payment\Model\Config\Source\Block</source_model>
                    <config_path>payment/latitudepay/static_block_pdp</config_path>
                </field>
                <field id="static_block_plp" translate="label" type="select" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Static block identifier for PLP</label>
                    <source_model>Latitude\Payment\Model\Config\Source\Block</source_model>
                    <config_path>payment/latitudepay/static_block_plp</config_path>
                </field>
            </group>
            <group id="genoapay" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="genoapay-payment-logo"></div><div class="genoapay-payment-byline">Pay with Genoapay at partnered stores over 10 weekly payments with no interest.</div>]]></label>
                <fieldset_css>complex genoapay-payment-section</fieldset_css>
                <frontend_model>Latitude\Payment\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <field id="enabled" translate="label" type="select" showInDefault="1" showInWebsite="1" sortOrder="10"
                       showInStore="1">
                    <label>Enabled</label>
                    <config_path>payment/genoapay/enabled</config_path>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                    <config_path>payment/genoapay/sort_order</config_path>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="show_in_mobile" translate="label" type="select" showInDefault="1" showInWebsite="1" sortOrder="16"
                       showInStore="1">
                    <label>Show Payment Icon in Mobile</label>
                    <config_path>payment/genoapay/show_in_mobile</config_path>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Environment</label>
                    <source_model>Latitude\Payment\Model\Adminhtml\Source\Environment</source_model>
                    <config_path>payment/genoapay/environment</config_path>
                </field>
                <field id="client_key" translate="label" type="obscure" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/genoapay/client_key</config_path>
                </field>
                <field id="client_secret" translate="label" type="obscure" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client Secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/genoapay/client_secret</config_path>
                </field>
                <field id="success_url" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Success URL</label>
                    <config_path>payment/genoapay/success_url</config_path>
                </field>
                <field id="fail_url" translate="label" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Fail URL</label>
                    <config_path>payment/genoapay/fail_url</config_path>
                </field>
                <field id="callback_url" translate="label" type="text" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Callback URL</label>
                    <config_path>payment/genoapay/callback_url</config_path>
                </field>
                <field id="logging" translate="label" type="select" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Logging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Toggle logging to latitude_payment.log</comment>
                    <config_path>payment/genoapay/logging</config_path>
                </field>
                <!--  <field id="currency" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                      <label>Currency Code</label>
                      <source_model>Magento\Config\Model\Config\Source\Locale\Currency</source_model>
