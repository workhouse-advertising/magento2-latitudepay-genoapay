<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Latitude_Payment::css/latitude.css"/>
    </head>
    <body>
      <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <block class="Latitude\Payment\Block\Catalog\Product\View\PaymentOptions" name="product.info.paymentoptions" after="product.info.price"
                       template="Latitude_Payment::catalog/product/view/paymentoptions.phtml">
                    <block class="Magento\Catalog\Block\Product\View" name="latitudepay.content" as="latitudepay.content" template="Latitude_Payment::catalog/product/view/latitudepay.phtml"/>
                    <block class="Magento\Catalog\Block\Product\View" name="genoapay.content" as="genoapay.content" template="Latitude_Payment::catalog/product/view/genoapay.phtml"/>
                </block>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>